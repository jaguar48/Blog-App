        <label asp-for="Categories"></label>
        <select asp-for="Categories. " asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" class=" form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Categories" class="text-danger"></span>
    </div>*@

    <div class="form-group">
        <label asp-for="Author "></label>

        <select asp-for="Author.Id " asp-items="@(new SelectList(ViewBag.Authors, "Id", "Name"))" class="form-control">
            <option value="">-- Select Author --</option>
        </select>
        <span asp-validation-for="Author.Id " class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
    
