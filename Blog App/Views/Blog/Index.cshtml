@using BLOG.BLL.Models;
<h1>Blog Posts</h1>

@if (Model.Count == 0)
{
    <p>There are no blog posts to display.</p>
}
else
{
    <ul>
        @foreach (var post in Model)
        {
            <li>
                <h2>@post.Title</h2>
                <p>@post.AuthorName</p>
                <p>@post.PublishedDate.ToShortDateString()</p>
                <p>@post.Body</p>
            </li>
        }
    </ul>
}

<a href="/Blog/Create" class="btn btn-primary">Create New Post</a>